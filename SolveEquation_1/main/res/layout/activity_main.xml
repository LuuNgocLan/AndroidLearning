<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.min.luungoclan.intent.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textview.text.title_screen_1"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/colorWhite"
        android:background="@color/colorGreen"
        android:padding="@dimen/text_padding"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/edt_margin_bottom"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textview.text.title_a"
            android:layout_weight="4"
            android:textSize="@dimen/text_size_small"
            />
        <EditText
            android:id="@+id/edtNumbera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_small"
            android:inputType="numberDecimal|number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textview.text.title_b"
            android:layout_weight="4"
            android:textSize="@dimen/text_size_small"
            />
        <EditText
            android:id="@+id/edtNumberb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_small"
            android:inputType="number|numberDecimal"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnResult"
        android:layout_marginTop="@dimen/edt_margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorRed"
        android:text="@string/button.text.result"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"/>


</LinearLayout>
